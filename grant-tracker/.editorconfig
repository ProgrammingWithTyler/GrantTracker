# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript
[*.ts]
indent_size = 2
quote_type = single
ij_typescript_use_double_quotes = false
insert_final_newline = true
trim_trailing_whitespace = true

# Angular Templates
[*.html]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# SCSS / CSS
[*.scss]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JSON & JSONC
[*.json]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.jsonc]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
insert_final_newline = true

# YAML files (Angular config, GitHub workflows, etc.)
[*.yml]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.yaml]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
